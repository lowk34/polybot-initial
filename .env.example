##### Runtime mode
PAPER_MODE=true
PUBLIC_CLIENT=mock

# Used in mock mode (comma-separated IDs)
MOCK_MARKET_IDS=nfl-yes-no-1,nfl-yes-no-2

##### Engine cadence and caps
POLL_INTERVAL_MS=1000
MAX_MARKETS_MONITORED=50
REQUESTS_PER_MINUTE=120
MAX_TRADE_USD=1
DAILY_CAP_USD=10

##### Risk/fees (basis points: 100 bps = 1%)
TOTAL_FEE_BPS=200
EDGE_BPS=100
MAX_SLIPPAGE_PCT=1

##### Execution behavior (paper)
TIME_IN_FORCE=IOC # or FOK
FILL_TIMEOUT_MS=2000
CANCEL_IF_PARTIAL=true

##### Logging
LOG_LEVEL=info
PRETTY_LOGS=true

##### Live trading integration (stubs; leave unset in paper mode)
SIGN_MODE=EXTERNAL_SIGNER # or ENV_KEY (not recommended)
# ENV_PRIVATE_KEY=0x...
ALLOW_ENV_KEY_IN_PROD=false

##### Notifications (optional)
# TELEGRAM_BOT_TOKEN=xxxx
# TELEGRAM_CHAT_ID=123456
